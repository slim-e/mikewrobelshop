@font-face {
  font-family: 'Klavika';
  src: url("{{ 'Klavika-Regular.otf' | file_url | split: '?' | first }}") format("opentype");
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'KlavikaBold';
  src: url("{{ 'Klavika-Regular-Bold.otf' | file_url | split: '?' | first }}") format("opentype");
  font-weight: bold;
  font-style: normal;
}
@font-face {
  font-family: 'KlavikaLight';
  src: url("{{ 'Klavika-Light.otf' | file_url | split: '?' | first }}") format("opentype");
  font-weight: lighter;
  font-style: normal;
}
@font-face {
  font-family: 'ARCADEPI';
  src: url("{{ 'ARCADEPI.TTF' | file_url | split: '?' | first }}") format('truetype');
  font-weight: lighter;
  font-style: normal;
}
